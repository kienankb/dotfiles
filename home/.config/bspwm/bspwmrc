#! /bin/bash

sxhkd &

xsetroot -cursor_name left_ptr

# Monitor setup on fancy new laptop
if [ $(hostname) = miranda ]; then
	xrandr --output eDP1 --auto --primary
fi

# Monitor setup for desktop
if [ $(hostname) = ophelia ]; then
	xrandr --output HDMI-0 --off
	xrandr --output DP-4 --auto --primary
	xrandr --output DP-0 --auto --left-of DP-4
fi

# For fixing touchpad scroll direction
if [ $(hostname) = miranda ]; then
	synclient VertScrollDelta=-250
	synclient HorizScrollDelta=-250
	synclient TapButton1=1
	synclient TapButton2=3
	synclient TapButton3=2
	synclient PalmDetect=1
fi

if [ $(hostname) = miranda ]
then
	bspc monitor eDP1 -d web work code play read misc
	polybar miranda &
fi

if [ $(hostname) = ophelia ]
then
	bspc wm -O DP-4 DP-0
	bspc monitor DP-4 -d 1 2 3 4 5
	bspc monitor DP-0 -d 6 7 8 9 0
	polybar ophelia &
	polybar ophelia-side &
fi

# Set the wallpaper
eval $(cat ~/.config/.fehbg)

bspc config bottom_padding			20
bspc config top_padding				0
bspc config window_gap				5
bspc config border_width			1
bspc config normal_border_color		\#5E513F
bspc config active_border_color		\#8B9161
bspc config focused_border_color	\#8B9161
bspc config presel_feedback_color	\#93AB72
bspc config split_ratio				0.50
bspc config borderless_monocle		true
bspc config gapless_monocle			false
bspc config focus_follows_pointer	true
bspc config borderless_monocle		false

bspc rule -a scratchpad sticky=on state=floating
bspc rule -a Onboard sticky=on state=floating border=off
bspc rule -a Keybase state=floating
bspc rule -a KeeWeb state=floating

compton &
redshift-gtk &
run_keybase &
# telegram-desktop &
