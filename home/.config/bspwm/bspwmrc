#! /bin/bash

sxhkd &

if [ $(hostname) = friday ]
then
	bspc monitor ^1 -n '' -d 1 2 3 4 5 6
fi

if [ $(hostname) = tuesday ]
then
	bspc monitor DP-4 -d 1 2 3 4 5 6
fi

if [ $(hostname) = friday ]
then
	polybar main-friday &
fi

if [ $(hostname) = tuesday ]
then
	polybar main-tuesday-c &
fi

bspc config bottom_padding			0
bspc config top_padding				20
bspc config window_gap				5
bspc config border_width			1
bspc config normal_border_color		\#444444
bspc config active_border_color		\#4B699B
bspc config focused_border_color	\#4B699B
bspc config presel_feedback_color	\#4B699B
bspc config split_ratio				0.50
bspc config borderless_monocle		true
bspc config gapless_monocle			false
bspc config focus_follows_pointer	true
bspc config borderless_monocle		false

bspc rule -a scratchpad sticky=on state=floating
bspc rule -a Keybase state=floating

compton &
redshift -l geoclue2 &
dropbox start &
run_keybase &
# telegram-desktop &
