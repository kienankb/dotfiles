[user]
	name = Kienan Knight-Boehm
	email = kienan@kienankb.com
[push]
	default = simple
[core]
	editor = vim
	quotepath = false
	pager = delta
[interactive]
	diffFilter = delta --color-only --features=interactive
[delta]
	features = decorations
	line-numbers = true
	side-by-side = true
[delta "interactive"]
    keep-plus-minus-markers = false
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
    pl = pull
    ps = push
[pull]
	rebase = false
