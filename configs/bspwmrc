#! /bin/bash

sxhkd &

if [ `hostname` == "friday" ]
then
	bspc monitor LVDS1 -d 1 2 3 4
	bspc config top_padding 25

elif [ `hostname` == "tuesday" ]
then
	bspc monitor DP-4 -n A -d 1 2 3 4
	bspc monitor DP-2 -n B -d 5 6 7 8
	bspc config -m A top_padding 25
	bspc config -m B top_padding 0
fi

bspc config border_width	1
bspc config window_gap		15

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer	true

compton --config "/home/kienan/.config/compton.conf" -b

panel &
# Custom panel setup
.panel_script &